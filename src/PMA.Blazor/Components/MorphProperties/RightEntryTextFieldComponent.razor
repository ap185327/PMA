<MudTextField @ref="_mudTextField"
              @bind-Value="TextValue"
              Label="@Label"
              HelperText="@HelperText"
              Immediate="true"
              Adornment="Adornment.End"
              AdornmentIcon="@Icons.Filled.Search"
              AdornmentColor="Color.Inherit"
              OnAdornmentClick="@((string.IsNullOrEmpty(ViewModel.RightEntry) ? null : OnAdornmentClick)!)"
              Disabled="Disabled"
              Error="Error"
              ErrorText="@HelperText"
              Margin="Margin.Dense"
              Variant="Variant.Outlined"
              FullWidth="true" />